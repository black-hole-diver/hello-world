/* for loop exercise to find the sum of the number from 10 to 1,
the counter part of exercise 1.10 */

#include <iostream>
using namespace std; //to not write std:: every time I write code

int main()
{
	int sum=0;
  	for (int i= 10; i >= 1; --i)
    	sum += i;
    cout <<sum<< endl;
    return 1;
}
