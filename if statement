/*if statement to count the number of time that the specific numbers
exist in a set of number, for example s=[1, 1, 41, 7 ,8 ,9] '1' occurs 2 times.*/

#include <iostream>
#include <fstream> //to read a file
#include <vector> //the tool to count the numbers in file

using namespace std;

int main(int argc, char *argv[])
{
	ifstream in("filename_in_the_project.txt"); //the file must be in the project
	int readNumber; //create variable readNumber
	
	vector<int> numberVector;
	
	while (in >> readNumber){
		numberVector.push_back(readNumber);
	}
	
	cout<< "The number of numbers in this file is "<< numberVector.size() << endl;
	
	int userNumber;
	int counter;
	while (true)
	{
		cout <<"Please enter the number you want to check occurance of: ";
		cin>>userNumber;
		for (int i=0; i<numberVector.size();++i)
		{
			if( userNumber == numberVector[i])
			{
				++counter;
			}
		}
		cout <<"This number "<< userNumber<< " has occured "<< counter<< " times."<< endl;
	}
	return 1;
}
